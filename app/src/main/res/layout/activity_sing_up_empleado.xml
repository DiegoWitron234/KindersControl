<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpEmpleado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/tvTitulos1"
            android:text="@string/registrar_empleado" />

        <TextView
            style="@style/tvTitulos2"
            android:text="@string/nombre" />

        <EditText
            android:id="@+id/edEmpleadoNombre"
            android:inputType="textPersonName"
            style="@style/etTitulos"
            android:hint="@string/nombre" />

        <TextView
            style="@style/tvTitulos2"
            android:text="@string/puesto" />

        <EditText
            android:id="@+id/edEmpleadoPuesto"
            android:inputType="textPersonName"
            style="@style/etTitulos"
            android:hint="@string/puesto" />

        <TextView
            style="@style/tvTitulos2"
            android:text="@string/lblCorreo" />

        <EditText
            android:id="@+id/edEmpleadoCorreo"
            android:inputType="textEmailAddress"
            style="@style/etTitulos"
            android:hint="@string/hintCorreo" />

        <Button
            android:id="@+id/btnRegEmpleado"
            android:layout_gravity="center"
            android:text="@string/registrar"
            android:layout_marginBottom="70dp"
            style="@style/boton"
        />
    </LinearLayout>
</ScrollView>