<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".administrador.DatosAlumno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/etTitulos"
            android:text="InformaciÃ³n del alumno: "
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            />

        <ImageView
            android:id="@+id/fotoAlumno"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logokinder"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/txtMatricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matricula: "
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/txtEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad: "
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/txtGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo: "
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/txtTipoSangre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de sangre: "
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutores:"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            />

        <ListView
            android:id="@+id/listaTutores"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

    </LinearLayout>

</ScrollView>