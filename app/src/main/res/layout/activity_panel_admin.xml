    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondokinder"
    tools:context=".PanelAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logokinder"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/imagenkinderscontrol"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/lblAdministracion"
            android:textColor="@color/textColor"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/textView"
                    style="@style/tvTitulos2"
                    android:layout_gravity="center"
                    android:text="@string/agregar"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    />
            </TableRow>
            <TableRow
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btnAgregarEmpleado"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="@string/btn_agregar_empleado"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:background="@drawable/estilos_boton"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    tools:targetApi="o" />

                <Button
                    android:id="@+id/btnAgregarNino"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="@string/agregar_ni_o"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:background="@drawable/estilos_boton"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    tools:targetApi="o" />
            </TableRow>
            <TableRow
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/textView3"
                    style="@style/tvTitulos2"
                    android:text="@string/registrarBoton"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    />
            </TableRow>
            <TableRow
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btnRegistroSalida"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="@string/entrada_salida"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:background="@drawable/estilos_boton"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    tools:targetApi="o" />

                <Button
                    android:id="@+id/btnRegistroEntrada"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:text="@string/registrar_entrada"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:background="@drawable/estilos_boton"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    tools:targetApi="o" />
            </TableRow>
        </TableLayout>

